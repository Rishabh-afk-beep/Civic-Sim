# CivicSim Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
AI_PROVIDER=gemini
REACT_APP_API_BASE_URL=https://your-vercel-domain.vercel.app

# Database (For production, consider using a hosted database)
DATABASE_URL=sqlite:///./civicsim.db

# Security (IMPORTANT: Change these values!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=["https://your-vercel-domain.vercel.app"]

# External APIs (Replace with your actual API keys)
GEMINI_API_KEY=your-gemini-api-key-here
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# AI Service Settings
GEMINI_MODEL=gemini-1.5-flash
AI_TIMEOUT=30

# Logging
LOG_LEVEL=INFO

# Data.gov.in API Key (Replace with your actual key)
DATAGOVINDIA_API_KEY=your-datagovindia-api-key-here