# CivicSim Vercel Environment Variables
# Copy these to your Vercel project environment variables

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
AI_PROVIDER=gemini

# Database (Use a cloud database for production)
DATABASE_URL=postgresql://user:password@host:port/database
# Or use SQLite for testing: sqlite:///./civicsim.db

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-vercel
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins
CORS_ORIGINS=["https://your-vercel-app.vercel.app"]

# External APIs
GEMINI_API_KEY=your-gemini-api-key-here
DATAGOVINDIA_API_KEY=your-datagovindia-api-key-here

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# AI Service Settings
GEMINI_MODEL=gemini-1.5-flash
AI_TIMEOUT=30

# Logging
LOG_LEVEL=INFO

# Frontend Environment Variables
REACT_APP_API_BASE_URL=https://your-vercel-app.vercel.app